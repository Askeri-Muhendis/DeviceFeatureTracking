<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/wifi_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/key_not_connected"
        app:layout_constraintEnd_toStartOf="@+id/cellular_iv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/wifi_off" />

    <TextView
        android:id="@+id/wifi_status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/wifi_iv"
        app:layout_constraintStart_toStartOf="@+id/wifi_iv"
        app:layout_constraintTop_toBottomOf="@id/wifi_iv"
        android:text="@string/key_not_connected" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/cellular_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/key_not_connected"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/wifi_iv"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/cellular_no_connected" />

    <TextView
        android:id="@+id/cellular_status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/cellular_iv"
        app:layout_constraintStart_toStartOf="@+id/cellular_iv"
        app:layout_constraintTop_toBottomOf="@id/wifi_iv"
        android:text="@string/key_not_connected" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/network_speed_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/key_not_connected"
        app:layout_constraintStart_toStartOf="@+id/wifi_iv"
        app:layout_constraintTop_toBottomOf="@+id/wifi_status_tv"
        android:src="@drawable/ic_speed_unknown" />

    <TextView
        android:id="@+id/network_speed_status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/network_speed_iv"
        app:layout_constraintStart_toStartOf="@+id/network_speed_iv"
        app:layout_constraintTop_toBottomOf="@+id/network_speed_iv"
        android:text="@string/key_not_connected" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/sim_card_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="@string/key_not_connected"
        app:layout_constraintStart_toStartOf="@+id/cellular_iv"
        app:layout_constraintTop_toTopOf="@+id/network_speed_iv"
        android:src="@drawable/ic_no_sim" />

    <TextView
        android:id="@+id/sim_card_status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/sim_card_iv"
        app:layout_constraintStart_toStartOf="@+id/sim_card_iv"
        app:layout_constraintTop_toBottomOf="@+id/sim_card_iv"
        android:text="@string/key_not_connected" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/battery_iv"
        android:layout_width="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="@string/key_not_connected"
        app:layout_constraintStart_toStartOf="@+id/network_speed_iv"
        app:layout_constraintTop_toBottomOf="@+id/network_speed_status_tv"
        android:src="@drawable/ic_not_battery" />

    <TextView
        android:id="@+id/battery_status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/battery_iv"
        app:layout_constraintStart_toStartOf="@+id/battery_iv"
        app:layout_constraintTop_toBottomOf="@+id/battery_iv"
        android:text="@string/key_not_charging" />
</androidx.constraintlayout.widget.ConstraintLayout>